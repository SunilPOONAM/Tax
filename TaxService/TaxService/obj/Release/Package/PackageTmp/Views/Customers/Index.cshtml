@model IEnumerable<TaxService.Models.Customer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<link href="~/Content/plugins/DataTables/datatables.css" rel="stylesheet" />
<style>
    table.dataTable tr {        
        height: 50px;
    }
</style>




<div class="col-md-12">
    <h2>Customers</h2>
    <p class="text-right">
        <a href="@Url.Action("Create")" class="btn bg-primary">Add New</a>
    </p>

    <div class="table-responsive mt-5">
        <table class="table table-striped table-hover" id="cusTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>

                    <th>Action</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>

                        <td class="d-flex">
                            <a href="~/Customers/Details/@item.CustomerID" data-toggle="tooltip" data-placement="top" title="Details">
                                @*<i class="fas fa-info-circle"></i>*@
                                View Link
                            </a>
                            <span class="mx-2">|</span>
                            <a href="~/Customers/Edit/@item.CustomerID" data-toggle="tooltip" data-placement="top" title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            <span class="mx-2">|</span>
                            <a href="~/Customers/Delete/@item.CustomerID" data-toggle="tooltip" data-placement="top" title="Delete">
                                <i class="far fa-trash-alt"></i>
                            </a>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {

   
    <script src="~/Content/plugins/DataTables/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#cusTable').DataTable({
                
            });
        });
    </script>

}

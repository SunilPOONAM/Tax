                                <a href="@Url.Action("Logout", "Admin")" class="dropdown-item">
                                    <i class="ni ni-user-run"></i>
                                    <span>Logout</span>
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <div class="container-fluid">
                <p class="mt-5">  @RenderBody() </p>
            </div>

        </main>
        <!-- page-content" -->
    </div>
